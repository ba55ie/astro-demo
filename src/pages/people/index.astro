---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.vue';

let persons = await Astro.glob('./*.md');

persons = persons.filter((p) => p.frontmatter.vue);
---

<Layout title="Vue people">
	<h1>Deze mensen werken met <code>Vue</code></h1>

	<ul class="people">
		{
			persons.map((person) => (
				<Card
					client:visible
					title={person.getHeadings()[0].text}
					body={person.frontmatter.hobbies}
					href={person.url as string}
				/>
			))
		}
	</ul>
</Layout>

<style>
	.people {
		all: unset;

		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 1rem;

		margin: 0 0 1rem;
	}

	code {
		color: darkgreen;

		font-size: inherit;
	}
</style>
